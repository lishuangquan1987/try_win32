<Window
    x:Class="获取窗体.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:获取窗体"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="button"
            Width="89"
            Height="24"
            Margin="10,66,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Click"
            Content="获取焦点窗体" />
        <Button
            x:Name="button1"
            Margin="16,110,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button1_Click"
            Content="获取所有窗体" />
        <ListBox
            x:Name="listBox"
            Margin="187,23,24,29"
            d:ItemsSource="{d:SampleData ItemCount=5}" />
        <Button
            x:Name="button2"
            Width="160"
            Height="38"
            Margin="22,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="发送消息给具有焦点的窗口" Click="button2_Click" />
    </Grid>
</Window>
